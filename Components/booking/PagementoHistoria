      pending: { label: "Pendente", color: "bg-yellow-100 text-yellow-800", icon: Clock },
      cancelled: { label: "Cancelado", color: "bg-red-100 text-red-800", icon: XCircle },
      refunded: { label: "Reembolsado", color: "bg-purple-100 text-purple-800", icon: CheckCircle }
    };
    const statusConfig = config[status] || config.pending;
    const Icon = statusConfig.icon;
    
    return (
      <Badge className={statusConfig.color}>
        <Icon className="w-3 h-3 mr-1" />
        {statusConfig.label}
      </Badge>
    );
  };

  const getPaymentMethodLabel = (method) => {
    const methods = {
      credit_card: "ğŸ’³ CartÃ£o de CrÃ©dito",
      pix: "ğŸ“± PIX",
      bank_transfer: "ğŸ¦ TransferÃªncia",
      installments: "ğŸ“Š Parcelamento"
    };
    return methods[method] || method;
  };

  const handleDownloadReceipt = (payment) => {
    if (payment.receipt_url) {
      window.open(payment.receipt_url, '_blank');
    } else {
      // Gerar recibo simples
      const receiptContent = `
COMPROVANTE DE PAGAMENTO
â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”

ALTAVIVA TURISMO
Franco da Rocha - SP

â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”

RESERVA: ${booking.confirmation_code}
PACOTE: ${booking.package_name}

PAGAMENTO:
Data: ${format(new Date(payment.date), "dd/MM/yyyy 'Ã s' HH:mm", { locale: ptBR })}
Valor: R$ ${payment.amount.toFixed(2)}
MÃ©todo: ${getPaymentMethodLabel(payment.method)}
Status: ${payment.status.toUpperCase()}

DescriÃ§Ã£o: ${payment.description || 'Pagamento da reserva'}

â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”

